<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sub_details_sub_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sub_details_sub_price_currency"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sub Name Temp" />

    <TextView
        android:id="@+id/sub_details_sub_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/sub_details_view_line"
        app:layout_constraintLeft_toLeftOf="@+id/sub_details_sub_name_label"
        app:layout_constraintRight_toRightOf="@+id/sub_details_sub_name_label"
        app:layout_constraintTop_toBottomOf="@+id/sub_details_sub_name_label"
        tools:layout_editor_absoluteY="58dp"
        tools:text="Sub Name Temp" />

    <TextView
        android:id="@+id/sub_details_sub_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/sub_details_sub_price_currency"
        app:layout_constraintRight_toLeftOf="@+id/sub_details_sub_price_currency"
        app:layout_constraintTop_toTopOf="@+id/sub_details_sub_price_currency"
        tools:text="@string/zero" />

    <TextView
        android:id="@+id/sub_details_sub_price_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/currency"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/sub_details_view_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sub_details_sub_description_label" />

</android.support.constraint.ConstraintLayout>
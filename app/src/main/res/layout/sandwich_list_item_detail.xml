<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/selector"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/sub_details_sub_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sub Name Temp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sub_details_total_price_for_sub"/>

    <TextView
        android:id="@+id/sub_details_sub_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="58dp"
        tools:text="Sub Name Temp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/sub_details_sub_name_label"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/sub_details_sub_name_label"
        app:layout_constraintRight_toRightOf="@+id/sub_details_sub_name_label"/>

    <TextView
        android:id="@+id/sub_details_total_price_for_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="00.00 PLN"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</android.support.constraint.ConstraintLayout>
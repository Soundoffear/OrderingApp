<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/cat_order_sum_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        tools:text="Something,something"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cat_order_line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/cat_order_sum_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="@string/zero"
        app:layout_constraintRight_toLeftOf="@+id/cat_order_sum_price_currency"
        app:layout_constraintTop_toTopOf="@+id/cat_order_sum_price_currency"
        app:layout_constraintBottom_toBottomOf="@+id/cat_order_sum_price_currency"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"/>


    <TextView
        android:id="@+id/cat_order_sum_price_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="@string/currency"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cat_order_sum_label"
        app:layout_constraintBottom_toBottomOf="@+id/cat_order_sum_label"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"/>

    <View
        android:id="@+id/cat_order_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
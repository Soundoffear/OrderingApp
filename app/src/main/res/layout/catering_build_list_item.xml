<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/catering_list_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="LABEL"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/catering_list_view_line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/catering_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="PRICE PLN"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/catering_list_item_label"
        app:layout_constraintBottom_toBottomOf="@+id/catering_list_item_label"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"/>

    <View
        android:id="@+id/catering_list_view_line"
        android:background="@android:color/holo_green_light"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
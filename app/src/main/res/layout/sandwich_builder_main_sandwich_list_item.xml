<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <CheckBox
        android:id="@+id/sub_build_list_selected_sandwich_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/sub_build_list_description_text_view"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        tools:text="Sandwich name"
        android:text="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sub_build_list_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/sub_build_list_selected_sandwich_check_box"
        tools:text="description description"
        app:layout_constraintLeft_toLeftOf="@+id/sub_build_list_selected_sandwich_check_box"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/sub_build_list_sandwich_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sub_build_list_selected_sandwich_check_box"
        app:layout_constraintBottom_toBottomOf="@+id/sub_build_list_description_text_view"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        tools:text="00.00 PLN"/>

</android.support.constraint.ConstraintLayout>
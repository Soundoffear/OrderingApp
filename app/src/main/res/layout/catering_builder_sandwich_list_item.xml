<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/cb_check_box_sandwich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cb_view_line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/cb_sandwich_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sandwich Name"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/cb_sandwich_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Description"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/cb_sandwich_item_name"
        app:layout_constraintLeft_toLeftOf="@+id/cb_sandwich_item_name"
        app:layout_constraintRight_toRightOf="@+id/cb_sandwich_item_name"
        android:layout_marginTop="4dp"/>

    <View
        android:id="@+id/cb_view_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintTop_toBottomOf="@+id/cb_sandwich_item_description"
        app:layout_constraintRight_toRightOf="@+id/cb_sandwich_item_description"
        app:layout_constraintLeft_toLeftOf="@+id/cb_sandwich_item_description"
        android:layout_marginTop="4dp" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ejoapps.m2d2_sub.orderingapp.MainActivity">

    <TextView
        android:layout_marginTop="64dp"
        android:id="@+id/tv_email_address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        tools:text="E-mail "
        android:text="E-mail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/et_email_input"
        android:layout_width="wrap_content"
        android:ems="10"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_email_address_label"
        app:layout_constraintRight_toRightOf="@id/tv_email_address_label"
        app:layout_constraintLeft_toLeftOf="@id/tv_email_address_label"/>

    <TextView
        android:id="@+id/tv_pass_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Password"
        android:text="Password"
        app:layout_constraintTop_toBottomOf="@+id/et_email_input"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toRightOf="@id/et_email_input"
        app:layout_constraintLeft_toLeftOf="@id/et_email_input"/>

    <EditText
        android:id="@+id/et_password_input"
        android:layout_width="wrap_content"
        android:ems="10"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_pass_label"
        app:layout_constraintRight_toRightOf="@id/tv_pass_label"
        app:layout_constraintLeft_toLeftOf="@id/tv_pass_label"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/et_password_input"
        app:layout_constraintRight_toRightOf="@+id/et_password_input"
        app:layout_constraintLeft_toLeftOf="@+id/et_password_input"
        android:orientation="horizontal"
        android:id="@+id/ll_buttons_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sign In"
            android:text="Sign In"/>

        <Button
            android:id="@+id/btn_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Create Account"
            android:text="Create Account"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

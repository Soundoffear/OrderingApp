<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sub_build_paid_adds_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Paid AddOn Name" />

    <ImageButton
        android:id="@+id/sub_build_paid_adds_remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="#0000"
        android:contentDescription="@string/remove_item_by_one"
        android:src="@drawable/ic_remove_circle_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/sub_build_paid_adds_name_label"
        app:layout_constraintRight_toLeftOf="@+id/sub_build_paid_adds_quantity"
        app:layout_constraintTop_toTopOf="@+id/sub_build_paid_adds_name_label" />

    <TextView
        android:id="@+id/sub_build_paid_adds_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/zero"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/sub_build_paid_adds_remove_button"
        app:layout_constraintRight_toLeftOf="@+id/sub_build_paid_adds_add_button"
        app:layout_constraintTop_toTopOf="@+id/sub_build_paid_adds_remove_button"
        tools:text="0" />

    <ImageButton
        android:id="@+id/sub_build_paid_adds_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#0000"
        android:contentDescription="@string/remove_item_by_one"
        android:src="@drawable/ic_add_box_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/sub_build_paid_adds_quantity"
        app:layout_constraintRight_toLeftOf="@+id/sub_build_paid_adds_price_per_one"
        app:layout_constraintTop_toTopOf="@+id/sub_build_paid_adds_quantity" />

    <TextView
        android:id="@+id/sub_build_paid_adds_price_per_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/sub_build_paid_adds_add_button"
        app:layout_constraintRight_toLeftOf="@+id/sub_build_paid_adds_price_final"
        app:layout_constraintTop_toTopOf="@+id/sub_build_paid_adds_add_button"
        tools:text="0.95 PLN" />

    <TextView
        android:id="@+id/sub_build_paid_adds_price_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/zero_pln"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/sub_build_paid_adds_price_per_one"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sub_build_paid_adds_price_per_one"
        tools:text="0 PLN" />

</android.support.constraint.ConstraintLayout>
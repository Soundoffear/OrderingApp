<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_margin="8dp"
    android:background="@android:color/holo_green_dark">

    <TextView
        android:id="@+id/recyclerViewTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUB30"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/recyclerViewLessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove_circle_black_24dp"
        android:background="#0000"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewTypeName"
        app:layout_constraintRight_toLeftOf="@+id/recyclerViewQuantity"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewTypeName" />

    <ImageButton
        android:id="@+id/recyclerViewMoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_box_black_24dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="#0000"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewLessButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewLessButton" />

    <TextView
        android:id="@+id/recyclerViewQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/recyclerViewMoreButton"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
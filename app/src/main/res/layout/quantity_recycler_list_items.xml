<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@android:color/holo_green_dark"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/recyclerViewTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="SUB30" />

    <ImageButton
        android:id="@+id/recyclerViewLessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#0000"
        android:contentDescription="@string/add_catering_item_button"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewTypeName"
        app:layout_constraintRight_toLeftOf="@+id/recyclerViewQuantity"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewTypeName"
        app:srcCompat="@drawable/ic_remove_circle_black_24dp" />

    <ImageButton
        android:id="@+id/recyclerViewMoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#0000"
        android:contentDescription="@string/remove_item_by_one"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewLessButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewLessButton"
        app:srcCompat="@drawable/ic_add_box_black_24dp" />

    <TextView
        android:id="@+id/recyclerViewQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/zero"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/recyclerViewMoreButton"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>